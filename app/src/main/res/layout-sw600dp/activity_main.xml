<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!-- The static MasterListFragment -->
    <fragment
        android:id="@+id/master_list_fragment"
        android:name="com.example.android.android_me.ui.MasterListFragment"
        android:layout_width="400dp"
        android:layout_height="match_parent" />

    <!-- A small divider -->
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <!-- LinearLayout that arranges all three Android-Me body part image vertically -->
    <LinearLayout
        android:id="@+id/android_me_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Three vertically arranged body part fragments - the frame layouts are cont-->
        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/head_container"
            android:layout_height="180dp"
            android:scaleType="centerInside"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/body_container"
            android:layout_height="180dp"
            android:scaleType="centerInside"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/leg_container"
            android:layout_height="180dp"
            android:scaleType="centerInside"/>

    </LinearLayout>

</LinearLayout>